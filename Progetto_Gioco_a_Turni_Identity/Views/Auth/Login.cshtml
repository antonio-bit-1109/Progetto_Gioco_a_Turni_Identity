@model LoginModel
<h2
>Login Utente
</h2>

<div class="row">
     <div class="col-md-8">
        

        <section class="mt-3">

            @{
                renderAlert("success", "alert-success");
                renderAlert("error", "alert-danger");
                renderAlert("no_autenticated", "alert-info");
                renderAlert("Logout_succ", "alert-success");      
			}

        </section>

        <section>
			<form method ="post" asp-controller="Auth" asp-action="LoginUser">
                <h4>Effettua Login in Piattaforma.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Login</button>
            </form> 
        </section>
        <section class="mt-2">
            <a asp-controller="Auth" asp-action="Registrazione">non hai un account? creane uno!</a>
        </section>
    </div> 
</div>


@functions {
    private void renderAlert(string key , string alertClass)
    {
        if (TempData[key] != null)
        {
            <div class="alert @alertClass">
                @TempData[key]
            </div>
        }
    }

}